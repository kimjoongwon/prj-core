{
  "name": "@shared/schema",
  "version": "0.0.1",
  "private": true,
  "description": "Shared schema, DTOs and entities for the core project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "prisma/**/*"
  ],
  "scripts": {
    "build": "pnpm run generate && tsup",
    "dev": "pnpm run generate && tsup --watch",
    "start:dev": "pnpm run generate:safe && npx concurrently \"tsc --noEmit --watch\" \"tsup --watch\"",
    "start:dev:simple": "npx concurrently \"tsc --noEmit --watch\" \"tsup --watch\"",
    "type-check": "tsc --noEmit",
    "generate": "prisma generate",
    "generate:safe": "prisma generate || echo 'Prisma generate failed, continuing...'",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.10",
    "@nestjs/swagger": "^11.0.5",
    "@prisma/client": "^6.4.1",
    "@shared/types": "workspace:*",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "libphonenumber-js": "^1.11.14",
    "lodash": "^4.17.21",
    "nestjs-prisma": "^0.25.0",
    "reflect-metadata": "^0.1.13",
    "remeda": "^2.14.0",
    "ts-jenum": "^2.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.13.5",
    "concurrently": "^8.2.2",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    }
  }
}
