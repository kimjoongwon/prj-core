{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictBindCallApply": false,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "include": ["node_modules/@prisma/**/*.ts", "src/**/*.ts"],
  "exclude": ["dist"]
}
