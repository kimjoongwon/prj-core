  ADMIN
}

enum TemplateNames {
  WELCOME
  EMAIL_VERIFICATION
  RESET_PASSWORD
}

enum QnaStatus {
  OPEN
  CLOSED
}

enum TextTypes {
  Editor
  Input
  Textarea
}

enum CategoryTypes {
  Role
  Space
  File
  User
}

enum GroupTypes {
  Role
  Space
  File
  User
}
