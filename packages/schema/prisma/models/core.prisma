model Category {
  id                   String                @id @default(uuid())
  seq                  Int                   @unique @default(autoincrement())
  createdAt            DateTime              @default(now()) @db.Timestamptz(6)
  updatedAt            DateTime?             @updatedAt @db.Timestamptz(6)
  removedAt            DateTime?             @db.Timestamptz(6)
  name                 String                @unique
  type                 CategoryTypes         @default(User)
  parentId             String?
  tenantId             String
  parent               Category?             @relation("CategoryToCategory", fields: [parentId], references: [id])
  children             Category[]            @relation("CategoryToCategory")
  tenant               Tenant                @relation(fields: [tenantId], references: [id])
  fileClassifications  FileClassification[]
  roleClassifications  RoleClassification[]
  spaceClassifications SpaceClassification[]
  userClassifications  UserClassification[]
}

model Group {
  id                String             @id @default(uuid())
  seq               Int                @unique @default(autoincrement())
  createdAt         DateTime           @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime?          @updatedAt @db.Timestamptz(6)
  removedAt         DateTime?          @db.Timestamptz(6)
  name              String
  type              GroupTypes         @default(User)
  label             String?
  tenantId          String
  tenant            Tenant             @relation(fields: [tenantId], references: [id])
  fileAssociations  FileAssociation[]
  roleAssociations  RoleAssociation[]
  spaceAssociations SpaceAssociation[]
  userAssociations  UserAssociation[]
}

model Tenant {
  id          String       @id @default(uuid())
  seq         Int          @unique @default(autoincrement())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime?    @updatedAt @db.Timestamptz(6)
  removedAt   DateTime?    @db.Timestamptz(6)
  userId      String
  spaceId     String
  roleId      String
  main        Boolean      @default(false)
  assignments Assignment[]
  categories  Category[]
  contents    Content[]
  files       File[]
  groups      Group[]
  role        Role         @relation(fields: [roleId], references: [id])
  space       Space        @relation(fields: [spaceId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
}

model Assignment {
  id        String    @id @default(uuid())
  seq       Int       @unique @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  removedAt DateTime? @db.Timestamptz(6)
  roleId    String
  tenantId  String
  role      Role      @relation(fields: [roleId], references: [id])
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
}

model Action {
  id         String         @id @default(uuid())
  seq        Int            @unique @default(autoincrement())
  createdAt  DateTime       @default(now())
  updatedAt  DateTime?      @updatedAt @db.Timestamptz(6)
  removedAt  DateTime?      @db.Timestamptz(6)
  name       AbilityActions @default(CREATE)
  conditions Json?
  tenantId   String
}

model Subject {
  id        String    @id @default(uuid())
  seq       Int       @unique @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  removedAt DateTime? @db.Timestamptz(6)
  name      String    @unique
  tenantId  String
}

model Ability {
  id          String       @id @default(uuid())
  seq         Int          @unique @default(autoincrement())
  createdAt   DateTime     @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?    @updatedAt @db.Timestamptz(6)
  removedAt   DateTime?    @db.Timestamptz(6)
  type        AbilityTypes
  roleId      String
  description String?
  conditions  Json?
  subjectId   String
  tenantId    String
  role        Role         @relation(fields: [roleId], references: [id])
}

model Post {
  id        String    @id @default(uuid())
  seq       Int       @unique @default(autoincrement())
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @updatedAt @db.Timestamptz(6)
  removedAt DateTime? @db.Timestamptz(6)
  contentId String
  content   Content   @relation(fields: [contentId], references: [id])
}

model Content {
  id          String    @id @default(uuid())
  seq         Int       @unique @default(autoincrement())
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime? @updatedAt @db.Timestamptz(6)
  removedAt   DateTime? @db.Timestamptz(6)
  title       String?
  description String?
  type        TextTypes @default(Editor)
  text        String?   @db.VarChar(1000)
  fileId      String?
  tenantId    String
  tenant      Tenant    @relation(fields: [tenantId], references: [id])
  posts       Post[]
}

