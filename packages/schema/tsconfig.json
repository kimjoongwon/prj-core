{
  "extends": "tsconfig/base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictBindCallApply": false,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "exclude": ["dist", "node_modules"]
}
