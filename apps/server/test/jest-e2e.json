{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "\\.e2e-spec\\.ts$",
  "transformIgnorePatterns": ["node_modules/(?!(lodash-es)/)"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "module": "commonjs",
          "target": "es2022",
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true,
          "types": ["jest", "node"],
          "skipLibCheck": true,
          "strict": false
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@cocrepo/prisma$": "<rootDir>/../../packages/prisma/dist/src",
    "^@cocrepo/repository$": "<rootDir>/../../packages/repository/dist",
    "^@cocrepo/service$": "<rootDir>/../../packages/service/dist",
    "^@cocrepo/entity$": "<rootDir>/../../packages/entity/dist",
    "^@cocrepo/vo$": "<rootDir>/../../packages/vo/dist",
    "^@cocrepo/dto$": "<rootDir>/../../packages/dto/dist",
    "^@cocrepo/toolkit$": "<rootDir>/../../packages/toolkit/dist",
    "^@cocrepo/constant$": "<rootDir>/../../packages/constant/dist",
    "^@cocrepo/type$": "<rootDir>/../../packages/type/dist",
    "^@cocrepo/decorator$": "<rootDir>/../../packages/decorator/dist",
    "^@shared$": "<rootDir>/src/shared/index",
    "^@shared/(.*)$": "<rootDir>/src/shared/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}
