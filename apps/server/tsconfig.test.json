{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@shared": ["./src/shared/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "prisma/seed.ts"
  ]
}
