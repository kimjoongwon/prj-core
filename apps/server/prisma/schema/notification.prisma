model Template {
  id          String        @id @default(uuid())
  name        TemplateNames @default(WELCOME)
  htmlContent String
  createdAt   DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime?     @updatedAt @db.Timestamptz(6)
  removedAt   DateTime?     @db.Timestamptz(6)
}

model SMS {
  id         String    @id @default(uuid())
  toUserIds  String[]
  fromUserId String?
  status     SMSStatus @default(PROGRESS)
  sentAt     DateTime?
  createdAt  DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime? @updatedAt @db.Timestamptz(6)
  removedAt  DateTime? @db.Timestamptz(6)
}

model Email {
  id         String      @id @default(uuid())
  title      String
  toUserIds  String[]
  fromUserId String?
  status     EmailStatus @default(PROGRESS)
  sentAt     DateTime?
  createdAt  DateTime    @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime?   @updatedAt @db.Timestamptz(6)
  removedAt  DateTime?   @db.Timestamptz(6)
}

enum TemplateNames {
  WELCOME
  RESET_PASSWORD
  INVITATION
  INVITATION_ACCEPTED
  INVITATION_REJECTED
  INVITATION_EXPIRED
  INVITATION_REMINDER
}

enum EmailStatus {
  PROGRESS
  PENDING
  SENT
  FAILED
}

enum SMSStatus {
  PROGRESS
  PENDING
  SENT
  FAILED
}
